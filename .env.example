# Localeflow Environment Variables
# Copy this file to .env and fill in your values
# docker-compose will automatically use the .env file

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=localeflow
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=localeflow

# ===========================================
# Authentication
# ===========================================
# JWT Secret for token signing (REQUIRED)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here

# ===========================================
# API Configuration
# ===========================================
# Port for the API service (default: 3001)
API_PORT=3001

# ===========================================
# Web Configuration
# ===========================================
# Port for the web application (default: 3000)
WEB_PORT=3000

# API URL that the web app uses to communicate with the API
# For local development with Docker: http://localhost:3001
# For production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===========================================
# Optional: Direct Database URL Override
# ===========================================
# Uncomment to override the composed DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# Test Database Configuration
# ===========================================
# Separate database URL for running tests (uses 'test' schema)
# This isolates test data from development/production data
TEST_DATABASE_URL=postgresql://localeflow:your-secure-password-here@localhost:5432/localeflow?schema=test
