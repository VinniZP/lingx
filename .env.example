# Localeflow Environment Variables
# Copy this file to .env and fill in your values
# docker-compose will automatically use the .env file

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=localeflow
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=localeflow

# ===========================================
# Authentication
# ===========================================
# JWT Secret for token signing (REQUIRED)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here

# ===========================================
# API Configuration
# ===========================================
# Port for the API service (default: 3001)
API_PORT=3001

# ===========================================
# Web Configuration
# ===========================================
# Port for the web application (default: 3000)
WEB_PORT=3000

# API URL that the web app uses to communicate with the API
# For local development with Docker: http://localhost:3001
# For production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# ===========================================
# Optional: Direct Database URL Override
# ===========================================
# Uncomment to override the composed DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# Test Database Configuration
# ===========================================
# Separate database URL for running tests (uses 'test' schema)
# This isolates test data from development/production data
TEST_DATABASE_URL=postgresql://localeflow:your-secure-password-here@localhost:5432/localeflow?schema=test

# ===========================================
# Email Configuration (Maildev for local dev)
# ===========================================
# SMTP settings - use maildev for local development
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localeflow.dev

# App URL for email links (verification, password reset, etc.)
APP_URL=http://localhost:3000

# ===========================================
# File Upload Configuration
# ===========================================
# Directory for uploaded files (avatars, etc.)
UPLOAD_DIR=./uploads

# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# ===========================================
# Two-Factor Authentication (TOTP)
# ===========================================
# 32-byte hex key for AES-256-GCM encryption of TOTP secrets
# Generate with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=your-64-character-hex-key-here

# ===========================================
# WebAuthn / Passkeys
# ===========================================
# Relying Party ID (domain without protocol, e.g., "localhost" or "yourdomain.com")
WEBAUTHN_RP_ID=localhost

# Relying Party Name (shown to users during passkey registration)
WEBAUTHN_RP_NAME=LocaleFlow

# Expected Origin (full URL with protocol, must match browser origin)
WEBAUTHN_ORIGIN=http://localhost:3000

# ===========================================
# Machine Translation
# ===========================================
# 32-byte hex key for AES-256-GCM encryption of MT provider API keys
# Generate with: openssl rand -hex 32
MT_ENCRYPTION_KEY=your-64-character-hex-key-here
