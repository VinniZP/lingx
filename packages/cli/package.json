{
  "name": "@lingx/cli",
  "version": "0.0.0",
  "description": "Lingx CLI tool for translation management",
  "private": true,
  "type": "module",
  "bin": {
    "lingx": "./bin/lingx.js"
  },
  "main": "./dist/index.js",
