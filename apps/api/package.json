{
  "name": "@lingx/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:test:setup": "DATABASE_URL=$TEST_DATABASE_URL prisma migrate deploy",
    "db:test:reset": "DATABASE_URL=$TEST_DATABASE_URL prisma migrate reset --force"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.46",
    "@ai-sdk/google": "^3.0.30",
    "@ai-sdk/mistral": "^3.0.20",
    "@ai-sdk/openai": "^3.0.30",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@google-cloud/translate": "^9.3.0",
    "@lingx/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@react-email/components": "^1.0.8",
    "@react-email/render": "^2.0.4",
    "@simplewebauthn/server": "^13.2.3",
    "ai": "^6.0.97",
    "awilix": "^12.0.5",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.70.1",
    "deepl-node": "^1.24.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.1.0",
    "ioredis": "^5.9.3",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "otplib": "^12.0.1",
    "pg": "^8.18.0",
    "prisma": "^7.4.1",
    "ua-parser-js": "^2.0.9",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@lingx/config": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "^4.0.18",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
