{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["DATABASE_URL", "TEST_DATABASE_URL", "NODE_ENV"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["DATABASE_URL", "TEST_DATABASE_URL", "NODE_ENV"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "knip": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
